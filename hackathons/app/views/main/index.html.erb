<div class="l-constrained">
  <h1>宿泊可能物件一覧</h1>
  <div>
    <table>
      <tr>
        <th>所有者</th>
        <th>詳細</th>
        <th>地域</th>
        <th>宿泊可能</th>
        <th>注意事項</th>
        <th>物件画像</th>
      </tr>
      <% @houses.each do |house| %>
        <% user = User.find_by(id: house.user_id) %>
        <% if user %>
          <tr>
            <td><%= user.name %></td>
            <td><%= house.detail %></td>
            <td><% if (house.area) == 1 %>
                東京
              <% elsif (house.area) == 2 %>
                南草津
              <% end %></td>
            <td><%= house.canVisit %></td>
            <td><%= house.caution %></td>
            <td><img src='<%= "/house_images/#{house.image_name}" %>' alt="" style="width:100%;" ></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>

