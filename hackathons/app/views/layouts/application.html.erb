<!DOCTYPE html>
<html>
  <head>
    <title>Hackathons</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if !(@current_user) %>
        <div class="l-wrapper">
          <div class="l-header">
            <div class="global-nav">
              <div class="l-constrained">
                <div id="notLogin">
                  <%= link_to("/home/top") do %>
                    <div class="logo link l-align-left myidea">
                      Book
                    </div>
                  <% end %>
                  <%= link_to("/home/new") do %>
                    <div class="link l-align-right">
                      新規登録
                    </div>
                  <% end %>
                  <%= link_to("/home/login") do %>
                    <div class=link l-align-center">
                      ログイン
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div id="Loginning">
          <div class=""header_right>
          <%= link_to("/user/logout",{method: :post}) do %>
            <div id="header_logout">
              ログアウト
            </div>
          <% end %>
          <%= link_to("/user/remove",{method: :post}) do %>
            退会
          <% end %>
          </div>
          <div class="header-left">
            <%= link_to ("/main/index") do %>
              <div id="header_index">
                住居の空き状況
              </div>
            <% end %>
            <%= link_to("/main/top") do %>
              <div id="header_maintop">
                メインページ
              </div>
            <% end %>
            <%= link_to("/main/#{session[:user_id]}") do %>
              <div id="header_mypage">
                マイページ
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </header>
    <div id=""main>
      <% if flash[:notice] %>
        <div id="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
